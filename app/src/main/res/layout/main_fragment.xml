<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="ru.batura.stat.codevibra.ui.main.MainViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".ui.main.MainFragment">

        <TextView
            android:id="@+id/running_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CodeVibra"
            android:layout_gravity="center"
            style="@style/TitleStyle"
            />

        <EditText
            android:id="@+id/edit_binary"
            addEditTextWatcherBin="@{viewModel}"
            addFocusListner="@{viewModel}"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="01111111111"
            style="@style/BasicTextStyle"
            android:layout_gravity="top"
            android:gravity="top"
            android:numeric="integer"
            />

        <EditText
            android:id="@+id/edit_decimal"
            addEditTextWatcherDec="@{viewModel}"
            addFocusListner="@{viewModel}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="true"
            android:inputType="number"
            android:text="0"
            style="@style/BasicTextStyle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:id="@+id/temp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp"
                    android:layout_gravity="center"
                    style="@style/BasicTextStyle"
                    />

                <SeekBar
                    android:id="@+id/temp_seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    addSeekListner="@{viewModel}"
                    android:progress="50"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:id="@+id/long_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long"
                    android:layout_gravity="center"
                    style="@style/BasicTextStyle"
                    />

                <SeekBar
                    android:id="@+id/longitude_seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    addSeekListner="@{viewModel}"
                    android:progress="50"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Sound"
                style="@style/BasicTextStyle"
                />
            <CheckBox
                android:id="@+id/sound_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                addCheckListner="@{viewModel}"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Loop"
                android:layout_marginStart="24dp"
                style="@style/BasicTextStyle"
                />
            <CheckBox
                android:id="@+id/cycle_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                addCheckListner="@{viewModel}"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{ () -> viewModel.startButtonClicked() }"
            android:text="start" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{ () -> viewModel.stopButtonClicked() }"
            android:text="stop"
            android:visibility="gone"
            />

    </LinearLayout>
</layout>
